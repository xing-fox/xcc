.container{
  margin: 0;
  padding: 0;
}
.con_bg{
  width: 100%;
  height: 244px;
  border-top: 1px solid #f6f6f6;
  position: relative;
}
.bg_image{
  display: inline-block;
  width: 100%;
  height: 244px;
}
.userNews{
  width: 80px;
  height: 120px;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto auto;
  text-align: center;
  z-index: 1;
  overflow: hidden;
}
.userImage{
  width: 80px;
  height: 80px;
  border-radius: 40px;
}
.userName{
  color: #fff;
  font-size: 14px;
  line-height: 40px;
}
.con_main{
  width: 100%;
  height: 40px;
}
.main_bar{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  border-bottom: 1px solid #eeeeee;
  display: flex;
}
.bar_name{
  flex: 1;
  margin: 0 6px;
  color: #666;
  align-items: center;
  text-align: center;
}
.bar_selectName{
  flex: 1;
  margin: 0 6px;
  color: #87ceeb;
  box-sizing: border-box;
  align-items: center;
  text-align: center;
  border-bottom: 2px solid #87ceeb;
}